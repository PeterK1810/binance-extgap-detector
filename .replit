# External Gap Indicator - Production Multi-Bot Configuration
# =============================================================
# This file tells Replit to launch all 3 bots via supervisord

run = ["bash", "scripts/management/start_all_bots.sh"]

modules = ["bash", "nix", "python-3.11"]

[languages.python3]
pattern = "**/*.py"

[languages.python3.languageServer]
start = "pylsp"

[env]
PYTHONPATH = "${PYTHONPATH}:${REPL_HOME}"
PYTHONUNBUFFERED = "1"

[nix]
channel = "stable-25_05"

[deployment]
run = ["sh", "-c", "./scripts/management/start_3_timeframes.sh"]
deploymentTarget = "vm"
ignorePorts = true

[[ports]]
localPort = 8080
externalPort = 80

[agent]
expertMode = true

[workflows]

[userenv]

