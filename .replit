# External Gap Indicator - Production Multi-Bot Configuration
# =============================================================
# This file tells Replit to launch all 3 bots via supervisord

run = ["bash", "scripts/management/start_all_bots.sh"]

modules = ["bash", "nix", "python-3.11"]

[languages.python3]
pattern = "**/*.py"

[languages.python3.languageServer]
start = "pylsp"

[env]
PYTHONPATH = "${PYTHONPATH}:${REPL_HOME}"
PYTHONUNBUFFERED = "1"

[nix]
channel = "stable-25_05"

[deployment]
run = ["sh", "-c", "python bots/indicators/binance_extgap_indicator_3m.py --symbol BTCUSDT --timeframe 3m & python   bots/indicators/binance_extgap_indicator_15m.py --symbol BTCUSDT --timeframe 15m & python   bots/indicators/binance_extgap_indicator_1h.py --symbol BTCUSDT --timeframe 1h"]
deploymentTarget = "vm"
ignorePorts = true

[[ports]]
localPort = 8080
externalPort = 80

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Gap Detector Multi-TF"

[[workflows.workflow]]
name = "Gap Detector Multi-TF"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash scripts/management/run_all_timeframes.sh"

[workflows.workflow.metadata]
outputType = "console"

[userenv]

[userenv.shared]
# SECURITY: Telegram bot tokens and chat IDs should be configured via Replit Secrets
# Navigate to Tools â†’ Secrets in Replit and add:
# - TELEGRAM_BOT_TOKEN_EXTGAP_3M
# - TELEGRAM_CHAT_IDS_EXTGAP_3M
# - TELEGRAM_BOT_TOKEN_EXTGAP_5M
# - TELEGRAM_CHAT_IDS_EXTGAP_5M
# - TELEGRAM_BOT_TOKEN_EXTGAP_15M
# - TELEGRAM_CHAT_IDS_EXTGAP_15M
# - TELEGRAM_BOT_TOKEN_EXTGAP_1H
# - TELEGRAM_CHAT_IDS_EXTGAP_1H
# Replit Secrets are automatically injected as environment variables at runtime.
