# Replit Configuration for Binance External Gap Detector V3
# ==========================================================
#
# This file tells Replit how to run the gap detector bot.
# Edit the 'run' command below to change parameters.

# Main run command (executed when you click "Run" button)
run = ["python3", "binance_extgap_detector_v3_replit.py", "--symbol", "BTCUSDT", "--timeframe", "2m", "--stats-interval", "1h"]
modules = ["bash", "nix", "python-3.11"]

# Language configuration
[languages.python3]
pattern = "**/*.py"

[languages.python3.languageServer]
start = "pylsp"

# Environment variables (use Replit Secrets for sensitive data)
[env]
PYTHONPATH = "${PYTHONPATH}:${REPL_HOME}"
PYTHONUNBUFFERED = "1"

# Nix packages for Python environment
[nix]
channel = "stable-25_05"
packages = ["python311", "python311Packages.pip"]

# Deployment configuration
[deployment]
run = ["sh", "-c", "python3 binance_extgap_detector_v3_replit.py --symbol BTCUSDT --timeframe 1m --stats-interval 1h"]
deploymentTarget = "gce"
ignorePorts = true

[[ports]]
localPort = 8080
externalPort = 80

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Gap Detector"

[[workflows.workflow]]
name = "Gap Detector"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 binance_extgap_detector_v3_replit.py --timeframe 1m --stats-interval 10m"
