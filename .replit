# External Gap Indicator - Production Multi-Bot Configuration
# =============================================================
# This file tells Replit to launch all 3 bots via supervisord

run = ["bash", "start_all_bots.sh"]

modules = ["bash", "nix", "python-3.11"]

[languages.python3]
pattern = "**/*.py"

[languages.python3.languageServer]
start = "pylsp"

[env]
PYTHONPATH = "${PYTHONPATH}:${REPL_HOME}"
PYTHONUNBUFFERED = "1"

[nix]
channel = "stable-25_05"

[deployment]
run = ["bash", "-c", "./start_3_timeframes.sh"]
deploymentTarget = "vm"
ignorePorts = true

[[ports]]
localPort = 8080
externalPort = 80

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Gap Detector"

[[workflows.workflow]]
name = "Gap Detector"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 binance_extgap_detector_v3_replit.py --timeframe 1m --stats-interval 10m"

[workflows.workflow.metadata]
outputType = "console"
